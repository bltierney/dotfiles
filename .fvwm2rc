
##########################################################################
# Assorted paths to important files
#
# ModulePath is a colon-separated list, just like regular unix PATH
ModulePath	/usr/local/lib/fvwm

# Pixmap and icon paths are also colon separated lists
#PixmapPath /usr/local/include/X11/pixmaps
PixmapPath /usr/local/lib/fvwm/pixmaps:/usr/local/lib/fvwm/3dpixmaps
IconPath /usr/local/include/X11/pixmaps:/usr/local/lib/fvwm/icons

# if dont want to waste screen space on icons
#PixmapPath 
#IconPath 

###########################################################################
# Set up the major operating modes
#
#############################################################################
# I find scrolling off the edge like that annoying, use the pager
EdgeScroll 0 0
# flip by whole pages on the edge of the screen.
#EdgeScroll 100 100


# Thresh in a 50 pixel move resistance
EdgeResistance 250 50

# Time for a single click in ms
ClickTime 150

# Set windows to auto-raise after 400 milliseconds
Module FvwmAuto 400

############################################################################
# set up the colors
HilightColor	yellow #b43060

############################################################################
# Now the fonts - one for icons, another for window titles
WindowFont		-*-helvetica-bold-r-*-*-12-*-*-*-*-*-*-*
#IconFont		-*-helvetica-medium-r-*-*-12-*-*-*-*-*-*-*
IconFont		-adobe-helvetica-bold-r-*-*-*-100-*-*-*-*-*-*

